# Treblle Configuration
TREBLLE_API_KEY=your_treblle_api_key_here
TREBLLE_PROJECT_ID=your_treblle_project_id_here

# Database Configuration (PostgreSQL)
# ====================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=treblle_api
DB_USER=treblle_user
DB_PASSWORD=your_secure_database_password_here
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# SSL Configuration for Production Database
# ========================================
# DB_SSL_CERT=/path/to/ssl/certificate.pem
# Uncomment above for production with SSL certificate

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_generated_jwt_secret_here
JWT_EXPIRES_IN=24h

# Ollama Configuration
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=moondream

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001